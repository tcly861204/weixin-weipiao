page{
  width:100%;
  height:auto;
}
.container {
  padding: 10px 0 30px;
  display:block;
  background-color: #06bd04;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.userinfo-avatar {
  width: 160rpx;
  height: 160rpx;
  margin: 20rpx;
  border-radius: 50%;
  border:2px solid #fff;
}
.userinfo-nickname {
  color: #fff;
}
.info {
  margin-top: 20px;
  text-align: center;
  color:#fff;
  font-size:16px;
}